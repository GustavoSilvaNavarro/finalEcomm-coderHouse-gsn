<main class="row mt-3">
  <div class="col-md-3">
    <section>
      <div class="d-flex justify-content-center">
        <img class="profile_picture" src={{ image }} alt={{ firstName }}>
      </div>
      <div>
        <h3 class="display-6 text-center">{{ firstName }} {{ lastName }}</h3>
        <p><span class="fw-bold">Email:</span> {{ email }}</p>
        <p><span class="fw-bold">Address:</span> {{ address }}</p>
      </div>
    </section>
  </div>

  <div class="col-md-9">
    <section>
      <h1 class="display-2 text-center">Welcome again!</h1>
      <div class="d-flex justify-content-around mt-5">
        <a href="/api/products" class="btn btn-primary btn-lg">Create product</a>
        <a href="/products" class="btn btn-primary btn-lg">See Products</a>
      </div>
    </section>
  </div>
</main>